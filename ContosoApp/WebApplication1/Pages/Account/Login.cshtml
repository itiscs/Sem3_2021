@page
@model WebApplication1.Pages.Account.LoginModel


<h2>Вход на сайт</h2>

<a asp-page="Register">Регистрация</a>

<br/>

<form method="post" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Lmodel.Email">Введите Email</label>
            <input type="text" asp-for="Lmodel.Email" />
            <span asp-validation-for="Lmodel.Email" />
        </div>
        <div class="form-group">
            <label asp-for="Lmodel.Password">Введите пароль</label>
            <input asp-for="Lmodel.Password" />
            <span asp-validation-for="Lmodel.Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>